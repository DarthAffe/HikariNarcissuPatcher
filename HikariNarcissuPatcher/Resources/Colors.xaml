<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Button -->
    <LinearGradientBrush x:Key="ButtonBackground" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#0000C9CC" Offset="0" />
        <GradientStop Color="#8300C9CC" Offset="0.33" />
        <GradientStop Color="#8300C9CC" Offset="0.66"/>
        <GradientStop Color="#0000C9CC" Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonBackgroundHover" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#0000C9CC" Offset="0" />
        <GradientStop Color="#FF00C9CC" Offset="0.33" />
        <GradientStop Color="#FF00C9CC" Offset="0.66"/>
        <GradientStop Color="#0000C9CC" Offset="1.0" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ButtonForeground" Color="#000000" />

</ResourceDictionary>